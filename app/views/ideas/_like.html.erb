<%= form_for(Like.new, remote: true) do |f| %>
	
	<% if signed_in? %>
		<%= button_tag(id:'like', type: 'submit', class: "btn btn-default btn-lg") do %>
		  <span class="glyphicon glyphicon-heart"></span>
		<% end %>
	<% else %>
		<%= button_tag(id:'like',type: 'submit', class: "btn btn-default btn-lg", disabled: "") do %>
		  <span class="glyphicon glyphicon-heart"></span>
		<% end %>
	<%end %>
	<%= hidden_field_tag 'idea_id', value=idea.id %>
	<%= hidden_field_tag 'id_count', value=id_count %>
<% end %>