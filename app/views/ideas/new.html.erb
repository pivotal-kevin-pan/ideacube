<% provide(:title, 'Add Idea') %>
<h1>Add an Idea!</h1>
<% if @idea.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      The form contains <%= pluralize(@idea.errors.count, "error") %>.
    </div>
    <ul>
    <% @idea.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<%= form_for(@idea) do |f| %>
			<%= f.label :title %>
			<%= f.text_field :title %>
			<%= f.label :description %>
			<%= f.text_area :description %>
			<%= f.submit "Add Idea", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>